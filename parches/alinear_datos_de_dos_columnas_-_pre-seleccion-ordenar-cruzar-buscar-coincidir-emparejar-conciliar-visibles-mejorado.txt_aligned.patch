+'========================
+' UTILIDAD: PARSE FECHA ISO (AAAA-MM-DD)
+'========================
+Function TryParseISODate(ByVal s As String, ByRef dOut As Date) As Boolean
+	Dim parts() As String
+	Dim y As Long, m As Long, d As Long
+
+	s = Trim$(s)
+	parts = Split(s, "-")
+	If UBound(parts) <> 2 Then Exit Function
+
+	If Not IsNumeric(parts(0)) Or Not IsNumeric(parts(1)) Or Not IsNumeric(parts(2)) Then Exit Function
+
+	y = CLng(parts(0))
+	m = CLng(parts(1))
+	d = CLng(parts(2))
+
+	On Error GoTo Bad
+	dOut = DateSerial(y, m, d)
+
+	' Validación estricta (evita fechas como 2026-02-40)
+	If Year(dOut) <> y Or Month(dOut) <> m Or Day(dOut) <> d Then GoTo Bad
+
+	TryParseISODate = True
+	Exit Function
+
+Bad:
+	TryParseISODate = False
+End Function
