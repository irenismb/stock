+'========================
+' LÓGICA DE VENCIMIENTO
+' - Funciona hasta la fecha indicada (incluida)
+' - A partir del día siguiente, bloquea
+'========================
+Function EstaVencida() As Boolean
+	Dim dVenc As Date
+
+	If Not TryParseISODate(EXPIRY_DATE_ISO, dVenc) Then
+		MsgBox "La constante EXPIRY_DATE_ISO tiene un formato inválido." & vbCrLf & _
+			   "Usa AAAA-MM-DD (por ejemplo 2026-02-11).", vbCritical
+		EstaVencida = True
+		Exit Function
+	End If
+
+	If Date > dVenc Then
+		MsgBox "Esta macro está vencida." & vbCrLf & _
+			   "Vencía el: " & Format$(dVenc, "yyyy-mm-dd") & vbCrLf & _
+			   "Fecha actual: " & Format$(Date, "yyyy-mm-dd"), vbCritical
+		EstaVencida = True
